<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1"
        android:layout_below="@+id/button4"
        android:layout_toStartOf="@+id/button5"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button1"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button1"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button7"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_above="@+id/button2"
        android:layout_toEndOf="@+id/button5"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignStart="@+id/button5"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@+id/button6"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button_plus"
        android:layout_alignTop="@+id/button9"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button_minus"
        android:layout_alignTop="@+id/button6"
        android:layout_toEndOf="@+id/button3"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_multiply"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:text="*"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button_divide"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button0"
        android:layout_alignBottom="@+id/button_divide"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_equals"
        android:layout_alignBottom="@+id/button0"
        android:layout_alignStart="@+id/button2"
        android:layout_toStartOf="@+id/button_multiply"
        android:background="@drawable/bg_button"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/button_clear"
        android:layout_above="@+id/button7"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_button"
        android:onClick="clear" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_commands"
        android:layout_alignEnd="@+id/button_plus"
        android:layout_toEndOf="@+id/button_clear"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView_results"
        android:layout_below="@+id/textView_commands"
        android:layout_alignParentStart="true" />
</RelativeLayout>
